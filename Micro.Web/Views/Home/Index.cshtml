@model IEnumerable<ProductDto>

@{
    ViewData["Title"] = "Home Page";
}

<style>


    .describing-text {
        margin-top: 20px;
        margin-left: 130px;
        margin-right: 130px;
        margin-bottom: 20px;
        /*background-color: black;
        padding: 20px;
        border: 1px solid #37FF8B;*/
    }

    h1 {
        color: #37FF8B;
        text-shadow: 2px 2px 5px #37FF8B;
        text-shadow: 5px 5px 15px #37FF8B;
        text-shadow: 3px 3px 15px #37FF8B;
    }

    .bi-brush-fill, .bi-brush, .bi-house {
        text-shadow: none;
        color: #37FF8B;
    }

    .hero-image {
        /*border: 0.5px solid grey;*/
        width: 90vw;
        height: auto;
    }
</style>
<div class="text-center">

    <h1 class="display-4">  &nbsp;<b>Unlimited art</b> </h1>
    <div class="describing-text">

        <p>
            Here you can find a wide variety of different types of art - from fine art to
            classic pieces and modern art, as well as futuristic styles.
            Our artists range from upcoming underground to well renowned names.
        </p>

    </div>

    <img class="hero-image" src="~/images/hero-pink.png" alt="Image Description">
</div>

<form>
    <div class="container row">
        @foreach (var product in Model)
            {
        <div class="col-12 col-md-6 col-lg-4">
            <div class="p-0 my-3 border rounded">
                <div class="card">
                    <h3 class="card-title text-white-50 text-center py-2">product.Name</h3>
                    <img src="@product.ImageUrl" class="card-img-top">
                    <div class="card-body">
                        <div class="d-flex justify-content-between py-2">
                            <span class="text-danger" style="font-size:20px;">@string.Format("{0:c}", product.Price)</span>
                            <span class="badge bg-warning text-white p-2">@product.CategoryName</span>
                        </div>
                        <p class="card-text">@Html.Raw(product.Description)</p>
                        <div class="row">
                            <div class="col">
                                <a asp-action="ProductDetails" asp-route-productId="@product.ProductId" class="btn btn-success form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            }
    </div>
</form>
